   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css">
  <style>
    .slider-images {
      height: 450px !important;
      object-fit: cover;
    }

    .service_icon{
      font-size: 90px;
      color: blueviolet;
    }
  </style>
</head>

<body>

  {{>navbar data=details}}

  {{>slider img=sliders}}

  {{!-- Services Section --}}

  
<section id="services_section" class="py-3">
    <h3 class="text-center mt-4">Services We Provides</h3>

    <div class="container">
      <div class="row mt-3">
           {{#each card}}
      <div class="col-md-4">
     
        <div class="card">
          <div class="card-body">
         <div class="container text-center py-4">
             <i class="{{this.icon}} service_icon"></i>
         </div>
            <h5 class="{{this.title}}">Provides Best Courses</h5>
            <p>{{this.subtitle}}</p>
            <a href="{{this.url}}">{{this.linkLabel}}</a>
            <a href="{{this.url}}">{{this.linkLabel}}</a>
          </div>
          
        </div>
      </div>
 {{/each}}
    </div>
    </div>
  </section>

{{!-- contact us section --}}

<section id="contact-us">
  <h3 class="text-center py-3">Contact Us</h3>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <form action="/process-data" method="post">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Email address</label>
    <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="phoneNumber" class="form-label">Phone Number</label>
    <input name="phone" type="number" class="form-control" id="exampleInputPassword1">
  </div>

  <div class="form-floating">
  <textarea name="description" class="form-control" placeholder="Write your query here" id="floatingTextarea"></textarea>
  <label for="floatingTextarea">Your Query</label>
</div>
  
 <div class="container text-center py-5">
  <button class="btn btn-dark">Submit</button>
 </div>
</form>
    </div>
  </div>
</div>
</section>
 
  <script src="https://kit.fontawesome.com/6dd5fd2ff6.js" crossorigin="anonymous"></script>
